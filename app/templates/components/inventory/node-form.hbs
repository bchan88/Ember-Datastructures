<div class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
    
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" {{action "modalCancel"}}>&times;</button>
        <h3>Node Details</h3>
      </div>
    
      <div class="modal-body">
        <form id="userForm" role="form" class="form-horizontal">
          <fieldset>
            <div class="form-group">
              <label class="control-label col-sm-2" for="name">Name</label>
              <div class="col-sm-8">
                {{input value=model.name class="form-control"}}
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-sm-2" for="value">Value</label>
              <div class="col-sm-8">
                {{input value=model.value class="form-control"}}
              </div>
            </div>
          </fieldset>
        </form>
      </div>
      
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal" id="save" {{action "modalSave"}}>Save</button>
        <button type="button" class="btn btn-default" data-dismiss="modal" id="cancel" {{action "modalCancel"}}>Cancel</button>
      </div>
    
    </div>
  </div>
</div>
