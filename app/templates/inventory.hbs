<div class="container">
  <div class="summary-panel">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <div class="pull-left">Inventory</div>
          <div class="pull-right">
            {{link-to "" "inventory.new" class="glyphicon glyphicon-plus"}}
          </div>
          <div class="clearfix"></div>
        </h3>
      </div>

      <div class="panel-body">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Value</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            {{#each model as |node|}}
              <tr>
                <td>{{node.name}}</td>
                <td>{{node.value}}</td>
                <td>
                  <a href="#" {{action "edit" node}}>Edit</a> | 
                  <a href="#" {{action "delete" node}}>Delete</a>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

{{outlet}}
